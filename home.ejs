<html>
    <head>
        <title>
            <%= locals.titleee %>
        </title>
        <script src="https://kit.fontawesome.com/e2b33d92a2.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="/css/home.css">
    </head>
    <body>
        <h1 id="page-heading">
            <i class="fas fa-address-book">My Contact List!</i>
        </h1>

        <div id="contact-list-container">
            <ul>
                <% for(let i of contact_list) { %> 
                    <li class="contact">
                        <div class="details">
                            <p><%= i.name %></p>
                            <p><%= i.phone %></p>
                        </div>
                        <div class="delete-button">
                            <!-- <a href="/delete-contact/?phone=<%= i.phone %>">  -->
                            <a href="/delete-contact/?id=<%= i._id %>">
                                <i class="fas fa-window-close"></i>
                            </a>

                        </div>
                    </li>    
                <%}%>
            </ul>
        </div>

        <form id="new-contact-form" action="/create-contact" method=POST>
            <input type="text" name="name" placeholder="Enter Name" required>
            <input type="number" name="phone" placeholder="Enter Phone No." required>

            <button type="submit">Add </button>
        </form>
        <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>